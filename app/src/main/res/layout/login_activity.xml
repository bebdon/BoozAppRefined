<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/login_constraint_layout"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/login_activity_login_constraint_layout_background_color">

	<Button
		android:id="@+id/login_button"
		android:layout_width="@dimen/login_activity_login_button_width"
		android:layout_height="@dimen/login_activity_login_button_height"
		android:layout_marginBottom="@dimen/login_activity_login_button_margin_bottom"
		android:background="@drawable/login_activity_login_button_ripple"
		android:gravity="start"
		android:text="@string/login_activity_login_button_text"
		android:textColor="@color/login_activity_login_button_text_color"
		android:textSize="@dimen/login_activity_login_button_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		tools:gravity="center" />

	<EditText
		android:id="@+id/pass_edit_text"
		android:layout_width="@dimen/login_activity_pass_edit_text_width"
		android:layout_height="@dimen/login_activity_pass_edit_text_height"
		android:layout_marginTop="@dimen/login_activity_pass_edit_text_margin_top"
		android:background="@drawable/login_activity_pass_edit_text_background"
		android:gravity="center|center_vertical"
		android:hint="@string/login_activity_pass_edit_text_hint"
		android:inputType="text"
		android:maxLines="1"
		android:textColor="@color/login_activity_pass_edit_text_text_color"
		android:textColorHint="@color/color_hint_text"
		android:textSize="@dimen/login_activity_pass_edit_text_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/email_edit_text"
		tools:layout_editor_absoluteX="72dp"
		tools:layout_editor_absoluteY="423dp"/>

	<EditText
		android:id="@+id/email_edit_text"
		android:layout_width="@dimen/login_activity_email_edit_text_width"
		android:layout_height="@dimen/login_activity_email_edit_text_height"
		android:layout_marginTop="@dimen/login_activity_email_edit_text_margin_top"
		android:background="@drawable/login_activity_email_edit_text_background"
		android:gravity="center|center_vertical"
		android:hint="@string/login_activity_email_edit_text_hint"
		android:inputType="text"
		android:maxLines="1"
		android:textColor="@color/login_activity_email_edit_text_text_color"
		android:textColorHint="@color/color_hint_text"
		android:textSize="@dimen/login_activity_email_edit_text_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/booz_text_view"
		tools:layout_editor_absoluteX="72dp"
		tools:layout_editor_absoluteY="368dp"/>

	<TextView
		android:id="@+id/booz_text_view"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/login_activity_booz_text_view_margin_top"
		android:fontFamily="@font/font_hotham_freedemo"
		android:gravity="start"
		android:text="@string/login_activity_booz_text_view_text"
		android:textColor="@color/login_activity_booz_text_view_text_color"
		android:textSize="@dimen/login_activity_booz_text_view_text_size"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:layout_editor_absoluteX="58dp"
		tools:layout_editor_absoluteY="105dp"/>
</android.support.constraint.ConstraintLayout>